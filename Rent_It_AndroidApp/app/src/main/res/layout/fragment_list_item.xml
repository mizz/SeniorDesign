<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.rent_it_app.rent_it.views.ListItemFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Title-->
        <TextView
            android:id="@+id/lblTitle"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_title"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />


        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <!--Description-->
        <TextView
            android:id="@+id/lblDescription"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_description"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="8"
            android:scrollbars="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <!--Condition-->
        <TextView
            android:id="@+id/lblCondition"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_condition"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="3"
            android:scrollbars="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <!--City-->
        <TextView
            android:id="@+id/lblCity"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_city"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <!--Zipcode-->
        <TextView
            android:id="@+id/lblZipcode"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_location"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:inputType="numberSigned"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <!--Category-->
        <TextView
            android:id="@+id/lblCategory"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_category"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:spinnerMode="dialog"/>
            <!--android:prompt="@string/category_prompt"
            android:entries="@array/category_array"
            style="@android:style/Widget.Spinner"-->


        <!--Tags-->
        <TextView
            android:id="@+id/lblTags"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_tags"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

        <!--<MultiAutoCompleteTextView
            android:id="@+id/mac_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            />-->

        <!--Value-->
        <TextView
            android:id="@+id/lblValue"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_value"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dollar1"
                android:textColor="@color/colorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:background="@drawable/edittext_bg"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>
        </LinearLayout>


        <!--Daily Rate-->
        <TextView
            android:id="@+id/lblRate"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_rate"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dollar2"
                android:textColor="@color/colorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:gravity="right"
                android:background="@drawable/edittext_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"/>
        </LinearLayout>

        <!--Image-->
        <TextView
            android:id="@+id/lblImage"
            android:textColor="@color/colorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_image"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <Button
            android:id="@+id/image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape2"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            android:text="Select Photo" />

        <ImageView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/preview"
            android:padding="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="List It!"
            android:id="@+id/list_button"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAccent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"/>
            <!--android:onClick="listItem"-->


      </LinearLayout>
    </ScrollView>
    <!--</RelativeLayout>-->
</FrameLayout>
